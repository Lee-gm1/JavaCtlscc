<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:scrollHorizontally="true"
	
	android:background="#004A6300">

	<ImageView
		android:id="@+id/editdi51"
		android:layout_width="520dp"
		android:layout_height="240dp"
		android:layout_margin="20dp"/>
	

		
	<ScrollView
		
		
		
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#50010C30"
		android:scrollbars="vertical"
		android:paddingTop="0dp"
		android:layout_marginTop="0dp"
		
		android:scrollHorizontally="true"
		android:scrollbarThumbVertical="@drawable/scrollbaryl"		
		android:fadeScrollbars="false"
		
		
		android:fastScrollEnabled="true"
		android:fastScrollAlwaysVisible="true"
		
	>
	
		<HorizontalScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#50010C30"
			android:scrollbars="vertical"
			android:paddingTop="0dp"
			android:scrollHorizontally="true"
			android:scrollbarThumbVertical="@drawable/scrollbaryl"		
			android:fadeScrollbars="false"
			
			android:fastScrollEnabled="true"
			android:fastScrollAlwaysVisible="true"
			
		>		
	
	<LinearLayout	
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#00CCAE6B"
		android:layout_centerVertical="false"
		android:scrollHorizontally="true"
		android:layout_margin="0dp"
		android:layout_marginTop="0dp"
		>
		
		<TextView
			android:id="@+id/edit50"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#FF009FFF"
			android:scrollHorizontally="true"
			android:textSize="14sp"
			android:background="#FF000000"
			android:maxLength="10000000"	
			android:typeface="monospace"
			android:layout_margin="0dp"
			android:layout_marginTop="0dp"

		/>
		

		
	<EditText
		android:id="@+id/edit51"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#FFFFFFFF"
		android:scrollHorizontally="true"
		android:textSize="14sp"
		android:background="#FF000000"
		android:maxLength="1000000000"	
		android:typeface="monospace"
		android:layout_margin="0dp"
		android:layout_marginTop="0dp"
		
		android:fastScrollEnabled="true"
		android:fastScrollAlwaysVisible="true"
		
		
		/>
	

	
	</LinearLayout>
	</HorizontalScrollView>
	</ScrollView>
	

	<TextView
		android:id="@+id/ed1txt51"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#00202020"
		android:layout_margin="0dp"
		android:layout_marginTop="0dp"
		android:textSize="13sp"
		android:layout_centerHorizontal="true"
		android:textColor="#50A0C0FF"
		android:ellipsize="start"
		android:maxLines="1"
		android:gravity="center_horizontal"
	    
		
		/>

